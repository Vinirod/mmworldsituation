<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:background="@color/colorBackgroundSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/idPgrWorld"
            android:visibility="visible"
            android:layout_marginTop="32dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:id="@+id/idLnContent"
            android:visibility="gone"
            android:paddingLeft="16dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:padding="16dp"
                android:background="@drawable/view_round">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cases"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:id="@+id/idTxtCases"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today cases"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/idTxtTodayCases"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deaths"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:id="@+id/idTxtDeaths"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today deaths"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/idTxtTodayDeaths"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tests"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:id="@+id/idTxtTests"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tests per one million"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/idTxtTestsPerOneMillion"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cases per one million"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:id="@+id/idTxtCasesPerOneMillion"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deaths per one million"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/idTxtDeathsPerOneMillion"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recovered"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:id="@+id/idTxtRecovered"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Affected countries"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/rregular"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/idTxtAffectedCountries"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/rregular"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/view_round">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_recovered"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/rregular"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/idLCGraphRecovered"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_height="500dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/view_round">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_deaths"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/rregular"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/idLCGraphDeaths"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_height="500dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/view_round">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_cases"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/rregular"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/idLCGraphCases"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_height="500dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
